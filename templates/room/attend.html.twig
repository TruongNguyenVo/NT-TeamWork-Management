{% extends 'base.html.twig' %}

{% block title %}Tham gia nhóm{% endblock %}

{% block body %}
<div class="container">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card mt-5">
                <div class="card-header">
                  <h4 class="card-title">Tham gia nhóm</h4>
                </div>
                <div class="card-body">
                  {{ form_start(form, {'action': path('app_room_attend'), 'method': 'POST', 'attr': {'class': 'd-inline'}}) }}
                    <div class="mb-3">
                      <label for="groupId" class="form-label">ID Nhóm</label>
                      {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.id) }}
                    </div>
                    <div class="mb-3">
                      <label for="groupPassword" class="form-label">Mật khẩu</label>
                      {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Tham gia nhóm</button>
                  {{form_end(form)}}
                </div>
              </div>
            </div>
          </div>
</div>
{% endblock %}
